                <label for="exampleInputPassword1">Sua senha:</label>
                <input type="password" class="form-control" name="password"  placeholder="Senha">
              </div>
              <button type="submit" class="btn btn-cor w-100">Entrar</button>
            </form>
          </div>
        </div>
      </div>


    <div class="container-fluid px-0 ">
      <div class="row vh-100  w-100 px-0 mx-0">

        <div class="col-lg fundo-cor vh-100 w-100 d-flex align-items-center p-0">
          <div class="border desFoco w-75 p-3 mx-auto ">
            <h2 class="text-center mb-4">Criar Conta</h2>
            <%- include('includes/messagens') %>
            <form class="register" action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value=<%=csrfToken%>>

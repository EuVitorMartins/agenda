                <label>Seu nome:</label>
                <input type="nome" class="form-control" name="nome" placeholder="Nome">
              </div>
              <div class="form-group">
                <label>Seu e-mail:</label>
                <input type="email" class="form-control" name="email"  placeholder="E-mail">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Crie uma senha:</label>
                <input type="password" class="form-control senha" name="password"  placeholder="Senha">
                <small id="emailHelp" class="form-text text-muted">Senha precisa ter entre 4 a 20 caracteres.</small>
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Confime sua senha:</label>
                <input type="password" class="form-control senhaConfim" name="passwordConfirm"  placeholder="Confime a senha">
              </div>
              <button type="submit" class="btn btn-cor w-100">Criar</button>
            </form>
          </div>
        </div>
        <div class="col-lg fundo-cor2 vh-10 w-100 d-flex align-items-center p-0 ">

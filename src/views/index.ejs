<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
          <h1 class="display-3 text-center">Agenta</h1>
          <p class="text-center lead">Seus contatos est√£o abaixo</p>

          <%- include('includes/messagens') %>

          <% if (user) { %>
          <div class="responsive-table">
            <table class="table">  
              <% contatos.forEach(contato => { %>
                <tr>
                <td><%= contato.data %></td>
                <td><%= contato.nome + " " + contato.sobrenome %></td>
                <td><%= contato.email %></td>
                <td><%= contato.telefone %></td>
                <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                <td><a class=" text-danger " href="/contato/delete/<%= contato._id %>">Deletar</a></td>
              <% }) %> 
              </tr>
              <% } else { %>
                <p class="text-center lead mt-5">Para exibir os contatos, tem que fazer login.</p>
                <div class="d-flex justify-content-center ">
                  <a class="btn btn-outline-dark " href="/login/index" role="button">Login</a>
                </div>
              <% } %>
            </table>
          </div>
        </div>
        
      </div>
    </div>

    <%- include('includes/footer') %>